/* pages/find/find.wxss */
.find-header{
  width: 100%;
  height: 44px;
  position: fixed;
  z-index: 99;
  background: white;
}
.header-wrap{
  width: 95%;
  height: 44px;
  margin: auto;
  display: flex;
  justify-content: start;
}
.header-item{
  width: 33%;
  height: 44px;
  line-height: 44px;
  text-align: center;
  font-weight: 500;
  font-size: 18px;
}
.find-wrap{
  width: 100%;
  background: #efefef;
}
.find-content{
  width: 95%;
  margin: auto;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.item-wrap{
  width: 48%;
  height: 341px;
  border-radius: 10px;
  background: white;
  overflow: hidden;
  margin-top: 20px;
}
.item-img{
  width: 100%;
  height: 238px;
}
.item-img image{
  width: 100%;
  height: 238px;
}
.item-img video{
  width: 100%;
  height: 238px;
}
.item-title{
  width: 100%;
  height: 40px;
  line-height: 20px;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.count{
  width:100%;
  height:30px;
  line-height: 30px;
  margin-top: 20px;
}
.user-photo{
  width: 22px;
  height: 22px;
  float: left;
  margin-top: 5px;
  border-radius: 10px;
  overflow: hidden;
}
.user-photo image{
  width: 22px;
  height: 22px;
}
.active{
  color: red;
}