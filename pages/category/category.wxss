/* pages/category/category.wxss */
.input-content {
  width: 100%;
  height: 100rpx;
  overflow: hidden;
}

.search-icon {
  position: absolute;
  top: 30rpx;
  left: 80%;
}

.input-content input {
  background-color: aliceblue;
  width: 90%;
  height: 60rpx;
  border-radius: 40rpx;
  margin-top: 20rpx;
  margin-left: 20rpx;
  text-indent: 5%;
}

.category-container {
  width: 100%;
  border-top: 1px solid;

}

.category-left {
  width: 28%;
  height: 100%;
  border-right: 1px solid;

  box-sizing: border-box;
  float: left;
}

.left-item {
  width: 100%;
  height: 40px;
  line-height: 40px;
  text-align: center;
}

.category-right {
  height: 100%;
  width: 72%;
  float: left;
}

.right-wrap {
  width: 100%;
  height: 100%;

}

.right-content {
  width: 100%;
  height: 100%;
}

.right-titleimg {
  width: 95%;
  height: 96px;
  margin: auto;
  margin-top: 20px;
}

.right-titleimg image {
  width: 100%;
  height: 100px;
}

.right-item {
  width: 95%;
  margin: auto;
}

.item-title {
  width: 100%;
  height: 25px;
  margin: 20px 0px;
  text-align: center;
}

.item-goodswrap {
  width: 100%;
  margin: auto;
  display: flex;
  flex-wrap: wrap;
}

.item-goods {
  width: 33.33%;
  height: 82px;
  text-align: center;
  margin-top: 10px;
}

.goods-img {
  width: 52px;
  height: 52px;
  margin: auto;
}

.goods-img image{
  width: 52px;
  height: 52px;
  margin: auto;
}

.goods-title {
  width: 52px;
  height: 20px;
  line-height: 20px;
  overflow: hidden;
  margin: 10px auto;
  text-align: center;
  font-size: 12px;
  color: #777;
}
.active{
  color: red;
  border-left: 5px solid red;
}