/* pages/cart/cart.wxss */
.cart-wrap{
  position: relative;
}
.cart-list{
  width: 100%;
  height: 100px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #cccccc;
}
.cart-icon{
  width: 10%;
  text-align: center;
}
.cart-img{
  width: 70px;
  height: 70px;
}
.cart-img image{
  width: 70px;
  height: 70px;
}
.cart-content{
  width: 60%;
}
.cart-title{
  font-size: 12px;
  height: 40px;
  line-height: 20px;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.cart-anything{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.cart-num{
  display: flex;
  text-align: center;
}
.cart-num text{
  width: 22px;
  height: 22px;
  background-color: #efefef;
  text-align: center;
  line-height: 22px;
  display: inline-block;
}
.cart-num view{
  height: 22px;
  margin: 0px 10px;
}
.dele{
  margin-left: 20px;
}

/* 底部固定栏 */

.cart-footer{
  width: 100%;
  height: 44px;
  line-height: 44px;
  position: fixed;
  bottom: 0;
  background: #fff;
  border-top: 1px solid #efefef;
  display: flex;
  justify-content: space-between;
  align-items: center;

}
.cart-icon1{
  display: flex;
  justify-content: center;
  align-items: center;
  height: 44px;
}
.cart-icon1 icon{
  margin-top: 22px;
}
.gopay{
  width: 30%;
  background: #f44;
  color:#fff;
  line-height: 44px;
  text-align: center;
}