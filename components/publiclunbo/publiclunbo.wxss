.scroll-wrap {
  width: 100%;
  height: 180px;
  margin-top: -75px;
  overflow: hidden;
  z-index: 99;
}

.scroll-list {
  width: 100%;
  height: 100%;
  margin: auto;
}

.scroll-item {
  width: 102px;
  height: 180px;
  float: left;
  overflow: hidden;
  border-radius: 10px;
  background: white;
  margin-left: 10px;
}

.scroll-item image {
  width: 102px;
  height: 120px;
}

.scroll-content {
  height: 100%;
  border-radius: 10px;
 
}

.item-title {
  text-overflow: ellipsis;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
