.scroll-wrap {
  width: 100%;
  height: 190px;
  margin-top: -75px;
  overflow: hidden;
  z-index: 99;
}

.scroll-list {
  width: 100%;
  height: 100%;
  margin: auto;
}

.scroll-item {
  width: 102px;
  height: 171px;
  float: left;
  overflow: hidden;
  border-radius: 10px;
  background-color: #f6f6f6;
  margin-left: 10px;
  position: relative;
}

.scroll-item image {
  width: 102px;
  height: 90px;
}

.scroll-content {
  height: 100%;
  border-radius: 10px;
 margin-top: 10px;
}

.item-title {
  margin-top: 10px;
  text-overflow: ellipsis;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.goods-icon{
  width: 35px;
  height:35px;
  border-radius: 50%;
  overflow: hidden;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-top: -17.5px;
  margin-left: -17.5px;
}
.goods-icon image{
  width: 100%;
  height: 100%;
}