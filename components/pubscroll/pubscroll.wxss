/* components/pubscroll/pubscroll.wxss */


.scroll-wrap {
  width: 100%;
  height: 235px;
}

.container {
  width: 95%;
  height: 100%;
  border-radius: 10px;
  background: white;
  margin: 10px auto;
}

.team-title {
  width: 95%;
  margin: auto;
  height: 50px;
}

.scroll-list {
  width: 100%;
  height: 195px;
  margin: auto;
}

.scroll-item {
  width: 115px;
  height: 185px;
  float: left;
  overflow: hidden;
  padding: 5px;
}

.scroll-item image {
  width: 109px;
  height: 109px;
}

.scroll-content {
  height: 100%;
}

.item-title {
  text-overflow: ellipsis;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}